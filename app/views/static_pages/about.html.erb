<div class="banner">
  <div class="landing-search-bar">
    <div class="landing-header">
      <h1>For every mood there is a book</h1>
      <br>
      <form class="form-inline search">
        <div class="form-group">
          <label class="sr-only" for="exampleInputEmail2">Email</label>
          <input type="email" class="form-control" id="exampleInputEmail2" placeholder="Choose a book, any book...">
        </div>
        <button type="submit" class="btn btn-default"><span class="fa fa-search"></span></button>
      </form>

    </div>
  </div>
  <% @tile_images.each do |tile_image| %>
    <div class="item" style='background-image: url(<%= cl_image_path(
    tile_image) %>);'></div>
  <% end %>
</div>


