<div class="banner">
  <div class="landing-search-bar">
    <div class="landing-header">

      <%= image_tag("https://i.postimg.cc/zf2681T2/bookgenius2.png", height: 50) %>
      <h1>For every book there is a mood</h1>
      <h3>... and for every mood there is a book</h3>
      <br>
      <form class="form-inline landing-search">
        <div class="form-group">
          <label class="sr-only" for="exampleInputEmail2">Email</label>
          <input type="email" class="form-control" id="exampleInputEmail2" placeholder="Search for a book, any book...">
        </div>
        <button type="submit" class="btn btn-default"><span class="fa fa-search"></span></button>
      </form>
    </div>
  </div>
  <% @tile_images.each do |tile_image| %>
    <% animation_duration = "animation-duration-#{rand(0..2)}" %>
    <% animation_start = "animation-start-#{rand(0..2)}" %>
    <div class="item <%= animation_duration %> <%= animation_start %>" style='background-image: url(<%= cl_image_path(
    tile_image) %>);'></div>
  <% end %>
</div>


