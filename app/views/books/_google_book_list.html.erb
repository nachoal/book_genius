<h2>Results for your search: "<%= params[:search] %>"</h2>
<% if books.count > 1 %>
<h3>(Please select the book that corresponds to your search)</h3>
<% end %>
<% books.each do |book| %>
  <div class="book-card">
    <div class="book-cover"><img src=<%= image_url book[:image_url] %>></div>
    <div class="book-body">
      <h4><strong><%= book[:book].title %></strong></h4>
      <h5>By <%= book[:book].author %>  </h5>
      <p><%= book[:book].description%></p>
    </div>
    <div class="book-analysis">
      <h4><strong>Social sentiment</strong></h4>
      <h5>No sentiment analysis available yet</h5>
    </div>
  </div>
<% end %>
